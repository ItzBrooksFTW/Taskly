<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.Taskly" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->


        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDark</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorSecondaryDark</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryDark</item>
        <item name="android:colorBackground">@color/colorBackgroundDark</item>
        <item name="colorOnBackground">@color/colorOnBackgroundDark</item>
        <item name="colorSurface">@color/colorSurfaceDark</item>
        <item name="colorOnSurface">@color/colorOnSurfaceDark</item>
        <item name="colorError">@color/colorErrorDark</item>
        <item name="colorOnError">@color/colorOnErrorDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryDark</item>
        <item name="android:windowBackground">@color/windowBackgroundDark</item>
        <item name="android:statusBarColor">@color/statusBarColorDark</item>
        <item name="android:navigationBarColor">@color/navigationBarColorDark</item>

        <item name="android:editTextStyle">@style/CustomInputStyle</item>
        <item name="customInputBackgroundColor">@color/customInputsColorDark</item>
        <item name="dayNightColor">#FFFFFF</item>
        <item name="textAppearanceBody1">@style/CustomTextAppearance</item>
    </style>
    <style name="CustomInputStyle">
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:textColorHint">@color/textColorSecondaryDark</item>
        <item name="android:background">@drawable/rounded_border</item>
    </style>
    <style name="CustomTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>